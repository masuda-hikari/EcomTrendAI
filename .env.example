# EcomTrendAI 環境変数設定

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_access_key_here
AMAZON_SECRET_KEY=your_secret_key_here
AMAZON_PARTNER_TAG=your-affiliate-tag-20

# アフィリエイト設定
AMAZON_AFFILIATE_ID=your-affiliate-tag-20

# ログ設定
LOG_LEVEL=INFO

# データ保存設定
DATA_DIR=./data
REPORTS_DIR=./reports

# スクレイピング設定
REQUEST_DELAY_SECONDS=2
MAX_RETRIES=3

# Email配信設定（任意）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient1@example.com,recipient2@example.com

# Webhook配信設定（任意）
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Stripe決済設定（課金機能を使用する場合）
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_PRICE_PRO=price_xxxxx_pro
STRIPE_PRICE_ENTERPRISE=price_xxxxx_enterprise

# データベース設定（本番環境用）
# SQLite（デフォルト - ローカル開発用）
# DATABASE_URL=sqlite:///./data/ecomtrend.db
#
# PostgreSQL（本番環境推奨）
# DATABASE_URL=postgresql://user:password@localhost:5432/ecomtrend
#
# Render PostgreSQL（自動設定）
# DATABASE_URL=postgresql://... (Renderが自動設定)

# API設定
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=*

# レート制限設定（DDoS対策）
RATE_LIMIT_IP_PER_MINUTE=100
RATE_LIMIT_IP_PER_SECOND=10
RATE_LIMIT_AUTH_PER_MINUTE=300
RATE_LIMIT_LOGIN_PER_MINUTE=5
RATE_LIMIT_REGISTER_PER_MINUTE=3

# ======================================
# フロントエンド設定（dashboard/.env.local）
# ======================================

# バックエンドAPIのURL
NEXT_PUBLIC_API_URL=http://localhost:8000
# 本番: NEXT_PUBLIC_API_URL=https://api.ecomtrend.ai

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# サイトURL（OGP・サイトマップ用）
NEXT_PUBLIC_SITE_URL=https://ecomtrend.ai

# ======================================
# エラーモニタリング設定
# ======================================

# Sentry（本番環境推奨）
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# 環境識別
ENVIRONMENT=development
# 本番: ENVIRONMENT=production

# Slackエラー通知
SLACK_ERROR_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/ERROR/WEBHOOK
