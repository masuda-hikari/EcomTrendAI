{
  "version": 2,
  "name": "ecomtrend-dashboard",
  "framework": "nextjs",
  "buildCommand": "cd dashboard && npm run build",
  "outputDirectory": "dashboard/out",
  "installCommand": "cd dashboard && npm ci",
  "devCommand": "cd dashboard && npm run dev",
  "regions": ["hnd1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "@api_url"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/api/:path*",
      "destination": "https://api.ecomtrend.ai/:path*",
      "statusCode": 307
    }
  ]
}
